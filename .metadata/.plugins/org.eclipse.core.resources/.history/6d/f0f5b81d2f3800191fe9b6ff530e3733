
public class Solution {
	public static void main(String[] args) {
		int start = 2;
		int row = 6;
		int loop =row/2;
		for (int i = 0; i < loop; i++) {
			int j=0;
			while(j<=i)
			{
				System.out.print(start+" ");
				j++;
			}
			start++;
			System.out.println("");
		}
		
		for (int i = loop; i>0; i--) 
		{
			start--;
			int j=0;
			while(j<i)
			{
				System.out.print(start+" ");
				j++;
			}
			
			System.out.println("");
		}
	}
}
